---
import Container from "@components/Container.astro";
import Main from "@layouts/Main.astro"

const description = "Haben Sie Fragen zu Gaston oder unserem Angebot? Vereinbaren Sie ein Termin in vier Klicks!"
---

<Main title="Termin vereinbaren" description={description}>
  <Container>
    <h1>Termin vereinbaren</h1>
    <p>{description}</p>
    <div class="calendly-inline-widget"
      data-url="https://calendly.com/philip-schoenholzer/30min?hide_event_type_details=1&hide_gdpr_banner=1">
      <div class="placeholder">Lade Kalender...</div>
    </div>
    <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>

  </Container>
</Main>

<style>
  .calendly-inline-widget {
    position: relative;
    min-width: 320px;
    height: 730px;
    z-index: 1;
  }

  .placeholder {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: -1;
  }
</style>